<%- include ('../system/header') %>
            
    <h1>Feladatok</h1>
    <%- include ('../system/message') %>

    <h3>Feladat lezárása - újranyitása</h3>

    <form action="/tasks/ready/<%= task.id %>" method="post">

        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="title" placeholder="" name="title" value="<%= session.body ? session.body.title : task.title %>" disabled>
            <label for="title">Feladat megnevezése <em>*</em></label>
        </div>

        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="" id="description" name="description" disabled><%= session.body ? session.body.description : task.description %></textarea>
            <label for="description">Leírás</label>
        </div>

        <div class="form-floating mb-3">
            <input type="date" class="form-control" id="start" placeholder="" name="start" value="<%= session.body ? session.body.start : task.start %>" disabled>
            <label for="start">Kezdés<em>*</em></label>
        </div>

        <div class="form-floating mb-3">
            <input type="date" class="form-control" id="end" placeholder="" name="end" value="<%= session.body ? session.body.end : task.end %>" disabled>
            <label for="end">Befejezés <em>*</em></label>
        </div>

        <% if (task.status == 1) {%>
            <input type="submit" value="Lezárás" name="close" class="btn btn-outline-success mt-3">
            
        <%} else {%>
            <input type="submit" value="Újranyitás" name="open" class="btn btn-outline-warning mt-3">
        <% } %>


    </form>

    <p>A <em>*</em>-al jelölt mezők kitöltése kötelező!</p>
    <a href="/tasks" class="btn btn-outline-secondary me-1">Vissza</a>

<%- include ('../system/footer') %>